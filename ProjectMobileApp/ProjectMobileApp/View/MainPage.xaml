<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ProjectMobileApp"
             xmlns:converters="clr-namespace:ProjectMobileApp.View"
             x:Class="ProjectMobileApp.View.MainPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:IntEnumConverter x:Key="IntEnum"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout>
        <!-- Place new controls here -->
        <!-- <Label Text="Welcome to Xamarin.Forms!" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />-->
        
         <StackLayout>
            <Label Text="Name"/>
            <Entry Text="{Binding Name}"/>
            <Label TextColor="Red" Text="{Binding NameError, Mode=TwoWay}"/>
            <Label Text="Date"/>
            <!-- <Label Text="{Binding DateError}"/>-->
            <DatePicker/>
            <Label Text="Category"/>
            <!--<Label Text="{Binding CategoryError}"/>-->
            <Picker ItemsSource="{Binding Categories}"/>
            <!--<Label Text="Amount"/>
            <Label BackgroundColor="Red" Text="{ Binding AmountError }"/>
            <Entry Text="{Binding Amount}"/>-->
            <Button Text="Save" Command="{Binding savePaymentCommand}"/>
        </StackLayout>
        
    </StackLayout>

</ContentPage>
    
